@model IEnumerable<Employees.Models.Company>

@{
    ViewBag.Title = "ShowCompanys";
    Layout = "~/Views/_layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2>Компании</h2>

            <p>@Html.ActionLink("Добавить", "EditCompany")</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.SizeCompany)</th>
                    <th>@Html.DisplayNameFor(model => model.OrganizationForm)</th>
                    <th>Действие</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SizeCompany)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrganizationForm)
                        </td>
                        <td>
                            @Html.ActionLink("Редактировать", "EditCompany", new { idCompany = item.Id }) |
                            @Html.ActionLink("Открыть", "ShowEmployees", new { idCompany = item.Id }) |
                            @Html.ActionLink("Удалить", "DeleteCompany", new { idCompany = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
